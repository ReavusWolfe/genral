<views:DetailsWindow x:Class="ReavusWolfe.Main.Views.Common.DetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:ReavusWolfe.Main.Views"
        xmlns:common="clr-namespace:ReavusWolfe.Main.ViewModels.Common"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" Height="450" Width="700"
        d:DataContext="{d:DesignInstance common:DetailsWindowViewModel}">
    
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel>
            <Button Command="{Binding CloseCommand}" Width="150" Height="50" Margin="0,10">Close window</Button>
        </StackPanel>
    </Grid>
    
</views:DetailsWindow>

